<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <%include ../static/partials/navbar.ejs %> <% include
    ../static/partials/messages.ejs %>

    <main class="container">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="display-3">Join the Lounge</h1>
          <p class="lead">
            The internet starts here
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-7">
          <p class="lead">Create an account</p>
          <form method="POST" action="/users" id="signupForm">
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control"
                name="email"
                aria-describedby="emailHelp"
                placeholder="Enter email"
              />
              <small class="text-muted" id="emailHelp"
                >email address must be a valid address</small
              >
            </div>
            <div class="form-group">
              <label for="img">Profile Image URL</label>
              <input
                type="text"
                class="form-control"
                name="img"
                aria-describedby="imgHelp"
                placeholder="Enter Image URL"
              />
              <small class="text-muted" id="imgHelp"
                >leave blank to use default image</small
              >
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                class="form-control"
                name="password"
                aria-describedby="passwordHelp"
                placeholder="Enter password"
              />
              <small class="text-muted" id="passwordHelp"
                >password must match confirmation below</small
              >
            </div>
            <div class="form-group">
              <label for="passwordConfirmation">Password confirmation</label>
              <input
                type="password"
                class="form-control"
                name="passwordConfirmation"
                aria-describedby="passwordHelp"
                placeholder="Enter password confirmation"
              />
            </div>
            <br />
            <input type="submit" value="Sign Up" class="btn btn-success" />
          </form>
        </div>
      </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
