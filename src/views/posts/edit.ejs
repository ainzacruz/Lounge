<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>

      <h1>Edit Post</h1>

      <form
        action="/topics/<%= post.topicId %>/posts/<%= post.id %>/update"
        method="post"
      >
        <div class="form-group post-title">
          <label for="title">Post title</label>
          <input
            value="<%= post.title %>"
            type="text"
            class="form-control"
            name="title"
            aria-describedby="titleHelp"
            placeholder="Enter Title"
          />
        </div>
        <div class="form-group post-url">
          <label for="img">Post Image URL</label>
          <input
            value="<%= post.img %>"
            type="text"
            class="form-control"
            name="img"
            aria-describedby="imgHelp"
            placeholder="May leave blank"
          />
          <small class="text-muted" id="titleHelp">enter url</small>
        </div>
        <div class="form-group post-description">
          <label for="body">Post body</label>
          <textarea
            rows="4"
            class="form-control"
            name="body"
            placeholder="Enter Description"
          >
<%= post.body %></textarea
          >
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
