<% if(comment) { %>
<div style="width: 50%">
  <hr />
  <p>
    <%= comment.body %>
  </p>
  <small class="card-subtitle mb-2 text-muted">
    sent by <%= comment.User.email %> on <%= comment.createdAt %>
  </small>
  <% if(currentUser && currentUser.id === comment.userId ||
  currentUser.isAdmin()) { %>
  <form
    style="display:initial"
    action="/topics/<%= post.topicId %>/posts/<%= post.id %>/comments/<%= comment.id %>/destroy"
    method="post"
  >
    <button type="submit" class="btn btn-sm btn0outline-danger">Delete</button>
  </form>
  <% } %>
  <hr />
</div>
<% } %>
