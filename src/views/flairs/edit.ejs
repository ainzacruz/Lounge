<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>Edit Flair</h1>

      <form
        action="/posts/<%= flair.postId %>/flairs/<%= flair.id %>/update"
        method="post"
      >
        <div class="form-group">
          <label for="name">Flair name</label>
          <input
            value="<%= flair.name %>"
            type="text"
            class="form-control"
            name="title"
            aria-describedby="titleHelp"
            placeholder="Enter Flair Name"
          />
        </div>
        <div class="form-group">
          <label for="color">Flair color</label>
          <textarea
            rows="4"
            class="form-control"
            name="color"
            placeholder="Enter Flair Color"
          >
<%= flair.color %></textarea
          >
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
