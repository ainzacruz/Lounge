<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>New Flair</h1>
      <form action="/posts/<%= postId %>/flairs/create" method="post">
        <div class="form-group">
          <label for="name">Flair name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            aria-describedby="titleHelp"
            placeholder="Enter Flair Name"
          />
        </div>
        <div class="form-group">
          <label for="color">Flair color</label>
          <textarea
            rows="4"
            class="form-control"
            color="color"
            placeholder="Enter Flair Color"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
