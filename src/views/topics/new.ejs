<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %> <% include
    ../static/partials/messages.ejs %>

    <main class="container">
      <h1 class="display-1">New Topic</h1>

      <form action="/topics/create" method="post">
        <div class="form-group topic-title">
          <label for="title">Topic title</label>
          <input
            type="text"
            class="form-control"
            name="title"
            aria-describedby="titleHelp"
            placeholder="Enter Title"
          />
          <small class="text-muted" id="titleHelp"
            >title must be one word and contain no spaces.</small
          >
        </div>
        <div class="form-group topic-url">
          <label for="title">Profile Image URL</label>
          <input
            type="text"
            class="form-control"
            name="img"
            aria-describedby="imgHelp"
            placeholder="May Leave Blank"
          />
          <small class="text-muted" id="imgHelp">enter url</small>
        </div>
        <div class="form-group topic-description">
          <label for="description">Description</label>
          <textarea
            rows="4"
            class="form-control"
            name="description"
            placeholder="Enter Description"
          ></textarea>
          <small class="text-muted" id="titleHelp"
            >description must be 10 or more characters in length.</small
          >
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
